NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shlf_db
DB_USER=postgres
DB_PASSWORD=your_password

# Auth
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRES_IN=7d

# External APIs
OPEN_LIBRARY_API_BASE=https://openlibrary.org
OPEN_LIBRARY_TIMEOUT_MS=5000

# CORS (only applies to browser clients; native iOS/Android are unaffected)
# Use * for mobile-only; set to web origins if you add a browser frontend
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
